<div class="col-lg-4">
          <h3>Weekly Newsletter</h3>
          <p>Register to our weekly newsletter and be updated with the latests yummy recipies.</p>
          <p>

            <%= form_for @user, :url => users_subscribe_path(@user), :method => :post,  :html => {:class => "form-horizontal"} do |f| %>
            <!-- <form class="form-horizontal" role="form"> -->
              <div class="form-group">
                <label for="inputEmail1" class="col-lg-4 control-label"></label>
                <div class="col-lg-10">
                  <%= f.text_field :email,  :class=>"form-control", :id=>"email", :placeholder=>"email" %>
                </div>
              </div>
              <div class="form-group">
                <label for="text1" class="col-lg-4 control-label"></label>
                <div class="col-lg-10">
                  <%= f.text_field :name,  :class=>"form-control", :id=>"name", :placeholder=>"Your name (optional)" %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-10">
                  <%= f.submit "Sign in", :class=>"btn btn-success" %>
                </div>
              </div>
             <!-- </form> --><!-- form -->
             <% end %>
          </p>
        </div><!-- col -->