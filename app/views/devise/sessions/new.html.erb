<h2>Log in</h2>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


<div class="form-group">
  <label for="inputTitle" class="col-lg-4 control-label"></label>
  <div class="col-lg-10">
   <div class="col-lg-4">
     
    <%= f.email_field :email, :class=>"form-control", autofocus: true, :placeholder=>"Email" %>
  </div>
</div>
</div>
<br/>
<div class="form-group">
  <label for="inputTitle" class="col-lg-4 control-label"></label>
  <div class="col-lg-10">
    <div class="col-lg-4">
      <%= f.password_field :password, :class=>"form-control", autocomplete: "off", :placeholder=>"password" %>
    </div>
  </div>
</div>

<% if devise_mapping.rememberable? -%>
<div class="form-group">
  <div class="col-lg-10">
   <div class="col-lg-4">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
</div>
</div>

<% end -%>

<div class="form-group">
  <div class="col-lg-10">
   <div class="col-lg-4">
    <%= f.submit "Log in", :class=>"btn btn-success" %>
  </div>
</div>
</div>
<% end %>
<div class="form-group">
  <div class="col-lg-10">
   <div class="col-lg-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
