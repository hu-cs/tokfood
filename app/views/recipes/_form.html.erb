             <%= f.text_field :title, :class=>"form-control", :id=>"title", :placeholder=>"Recipe title" %>
        </div>
      </div>
      <div class="form-group">
        <label for="Creatpr" class="col-lg-4 control-label"></label>
        <div class="col-lg-10">
           <%= f.text_field :creator,  :class=>"form-control", :id=>"creator", :placeholder=>"Creator" %>
          
        </div>
      </div>

      <div class="form-group">
        <label for="text1" class="col-lg-4 control-label"></label>
        <div class="col-lg-10">
           <%= f.file_field :image, :class=>"form-control", :id=>"image", :placeholder=>"Reciep image" %>
        </div>
      </div>

      <div class="form-group">
        <label for="ingredients" class="col-lg-4 control-label"></label>
