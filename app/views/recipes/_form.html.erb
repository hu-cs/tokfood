        </div>
      </div>

      <div class="form-group">
        <label for="serving" class="col-lg-4 control-label"></label>
        <div class="col-lg-10">
           <%= f.text_area :serving, :id => "serving_area", :cols => 35, :rows => 10, :class=>"form-control", :id=>"serving", :placeholder=>"Recipe Serving (optional)" %>
