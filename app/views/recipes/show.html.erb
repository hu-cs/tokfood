
    <!-- Page Content -->
    <div class="container">

        <!-- Portfolio Item Heading -->
        <div class="row">
            <p> &nbsp; </p>
            <div class="col-lg-12">
                <h1 class="page-header"> 
                    <small><%= @recipe.title %></small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <%= render "shared/embeded_player", :video_info => vido_info(@recipe.video_link) %>
            </div>

            <div class="col-md-4">
                 <%= render "shared/ads" %>
                <h3>Recipe Description</h3>
                <%= @recipe.serving.html_safe %>
                <h3>Ingredients</h3>
                <%= @recipe.ingredients.html_safe %>
            </div>
        </div>
        <!-- /.row -->
       
       

        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Latest Reciepes</h3>
            </div>
            <% @latest.each do | r | %>
            <div class="col-sm-3 col-xs-6">
                <a href="/recipes/<%= r.id %>">
                    <img class="img-responsive portfolio-item" src="<%= r.image %>" alt="">
                </a>
            </div>
            <% end %>
            
            
        </div>
        <!-- /.row -->

        <hr>

         <!-- ==== START PORTFOLIO ==== -->
    <div class="container" id="portfolio" name="portfolio">
      <br>
        <div class="row">
          <br>
          <h1 class="centered">WE CREATE COOL STUFF</h1>
          <hr>
          <br>
          <br>
        </div><!-- /row -->
        <!--inner container -->
        <div class="container">  
          <% @recipes.shuffle.each_with_index do | recipe, index | %>
          <% if index % 3 == 0 %>
          <%= render "shared/profolio", :recipe => @recipes, :index => index-1 %>
          <% end %>
          <% end %>
          <br>
          <br>
          <%= will_paginate @recipes, renderer: BootstrapPagination::Rails %>
        </div><!--  / inner container -->
    </div>
  <!-- ==== END PORTFOLIO ==== -->

         <div class="container" id="contact" name="contact">
      <div class="row">
      <br>
        <h1 class="centered">THANKS FOR VISITING US</h1>
        <hr>
        <br>
        <br>
        
        <%= render "shared/contactinfo" %>
        <%= render "shared/newsletter" %>
        <%= render "shared/supportus" %>
        
       

      </div><!-- row -->
    
    </div><!-- container -->



    </div>
   