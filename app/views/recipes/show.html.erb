
    <!-- Page Content -->
    <div class="container">

        <!-- Portfolio Item Heading -->
        <div class="row">
            <p> &nbsp; </p>
            <div class="col-lg-12">
                <h1 class="page-header"> 
                    <small><%= @recipe.title %></small>
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Item Row -->
        <div class="row">

            <div class="col-md-8">
                <%= render "shared/embeded_player", :video_info => vido_info(@recipe.video_link) %>
            </div>

            <div class="col-md-4">
                <h3>Recipe Description</h3>
                <p><%= @recipe.serving.html_safe %></p>
                <h3>Ingredients</h3>
                <%= @recipe.ingredients.html_safe %>
            </div>

        </div>
        <!-- /.row -->
       

        <!-- Related Projects Row -->
        <div class="row">

            <div class="col-lg-12">
                <h3 class="page-header">Latest Reciepes</h3>
            </div>
            <% @latest.each do | r | %>
            <div class="col-sm-3 col-xs-6">
                <a href="/recipes/<%= r.id %>">
                    <img class="img-responsive portfolio-item" src="<%= r.image %>" alt="">
                </a>
            </div>
            <% end %>
            
        </div>
        <!-- /.row -->

        <hr>


    </div>
   